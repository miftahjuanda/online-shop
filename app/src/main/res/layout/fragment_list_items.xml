<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Theme.AppCompat.NoActionBar"
    tools:context=".scenes.listItems.ListItemsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="100dp">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="40dp"
            app:flow_horizontalAlign="center"
            android:src="@drawable/ic_logo_apps"
            app:layout_constraintBottom_toBottomOf="@id/header_cl"
            app:layout_constraintEnd_toEndOf="@id/header_cl"
            app:layout_constraintTop_toTopOf="@id/header_cl" />

        <TextView
            android:id="@+id/title_tv"
            style="@style/TextView.PoppinsNormal32sp020202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FoodMarket "
            android:layout_marginTop="30dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintStart_toStartOf="@id/header_cl"
            app:layout_constraintTop_toTopOf="@id/header_cl" />

        <TextView
            android:id="@+id/subtitle_tv"
            style="@style/EditText.PoppinsNormal14sp8D92A3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letâ€™s get some foods"
            android:textColor="@color/grayTv"
            android:layout_marginLeft="24dp"
            app:layout_goneMarginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/header_cl"
            app:layout_constraintTop_toBottomOf="@id/title_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_list_rv"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        tools:listitem="@layout/item_list_vertical"
        android:layout_height="match_parent"/>
</LinearLayout>