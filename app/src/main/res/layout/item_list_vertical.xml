<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_list_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_rectangle_8_fff"
        android:scaleType="centerCrop"
        android:clipToOutline="true"
        android:src="@drawable/iv_sample_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/title_list_tv"
        style="@style/TextView.PoppinsNormal16sp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Title List"
        app:layout_constraintTop_toTopOf="@id/home_list_img"
        app:layout_constraintStart_toEndOf="@id/home_list_img" />

    <TextView
        android:id="@+id/subtitle_list_tv"
        style="@style/TextView.PoppinsNormal13sp8D92A3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Sub Title List"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/title_list_tv"
        app:layout_constraintStart_toEndOf="@id/home_list_img" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>