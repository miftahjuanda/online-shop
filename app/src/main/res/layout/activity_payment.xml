<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    tools:context=".scenes.payment.PaymentActivity">

    <RelativeLayout
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_000"
            app:tint="@android:color/darker_gray" />

        <TextView
            style="@style/TextView.PoppinsNormal22sp020202"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/back_iv"
            android:text="Payment" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/checkout_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    style="@style/TextView.PoppinsNormal14sp020202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Ordered" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/iv_sample_product" />

                    <TextView
                        android:id="@+id/payment_total_items_tv"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="14 items"
                        android:textColor="@color/grayTv" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_toStartOf="@id/payment_total_items_tv"
                        android:layout_toEndOf="@id/item_image"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/payment_title_tv"
                            style="@style/TextView.PoppinsNormal16sp020202"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Cherry Healthy" />

                        <TextView
                            android:id="@+id/payment_harga_tv"
                            style="@style/TextView.PoppinsNormal13sp8D92A3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="IDR 289.000" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/payment_total_items_tv"
                    android:layout_toEndOf="@id/item_image"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.PoppinsNormal14sp020202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Total Price"
                        android:textColor="@color/grayTv" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/payment_total_harga_tv"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IDR 390.803.000"
                        android:textColor="@color/green" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    style="@style/TextView.PoppinsNormal14sp020202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Deliver to" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_toStartOf="@id/payment_total_items_tv"
                    android:layout_toEndOf="@id/item_image"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.PoppinsNormal14sp020202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Nama"
                        android:textColor="@color/grayTv" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/nama_tv"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama sayaa"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_toStartOf="@id/payment_total_items_tv"
                    android:layout_toEndOf="@id/item_image"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.PoppinsNormal14sp020202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Phone number"
                        android:textColor="@color/grayTv" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/phone_number_tv"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0822 0819 9688"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_toStartOf="@id/payment_total_items_tv"
                    android:layout_toEndOf="@id/item_image"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextView.PoppinsNormal14sp020202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="2dp"
                        android:text="Address: "
                        android:textColor="@color/grayTv" />

                    <TextView
                        android:id="@+id/address_tv"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seledri, telur, blueberry, madu. Seledri, telur, blueberry, madu. Seledri, telur, blueberry, madu."
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_toStartOf="@id/payment_total_items_tv"
                    android:layout_toEndOf="@id/item_image"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView.PoppinsNormal14sp020202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Postal code"
                        android:textColor="@color/grayTv" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/postal_code_tv"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21122"
                        android:textColor="@color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="15dp"
                android:paddingEnd="24dp"
                android:paddingBottom="15dp">

                <TextView
                    style="@style/TextView.PoppinsNormal14sp020202"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Order Status:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/payment_total_items_tv"
                    android:layout_toEndOf="@id/item_image"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/code_order_tv"
                        style="@style/TextView.PoppinsNormal14sp020202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Nama"
                        android:textColor="@color/grayTv" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/status_order_payment"
                        style="@style/TextView.PoppinsNormal13sp8D92A3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama sayaa"
                        android:textColor="@color/yellowLight" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/checkout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shape_rectangle_8_ffc700"
        android:text="Checkout Now"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>